<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quiz.View.FirstViewController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
         <children>
            <HBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <Label fx:id="label" text="Quiz App" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="33.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label fx:id="subtitle" alignment="CENTER" prefHeight="113.0" prefWidth="500.0" text="youve probably watched all the shounen classics... not that impressive" textAlignment="CENTER" wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Region layoutX="10.0" layoutY="187.0" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <HBox alignment="TOP_CENTER">
               <children>
                  <ButtonBar buttonMinWidth="100.0" HBox.hgrow="NEVER">
                    <buttons>
                        <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStartButtonClicked" text="Start Quiz" />
                    </buttons>
                  </ButtonBar>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="162.0">
               <children>
                  <ButtonBar buttonMinWidth="100.0" HBox.hgrow="NEVER">
                     <buttons>
                        <Button fx:id="animent" onAction="#onAnimentClicked" mnemonicParsing="false" text="Animen't quiz" />
                     </buttons>
                  </ButtonBar>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="175.0">
               <children>
                  <ButtonBar buttonMinWidth="100.0" HBox.hgrow="NEVER">
                     <buttons>
                        <Button fx:id="quitButton" onAction="#onQuitButtonCLicked" mnemonicParsing="false" text="Quit" />
                     </buttons>
                  </ButtonBar>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <Region prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</AnchorPane>
